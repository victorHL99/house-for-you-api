  "scripts": {
    "build": "tsc && npx prisma generate && npx prisma migrate deploy",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "dev:test": "npx prisma generate && npx prisma migrate dev dotenv -e .env.test nodemon src/index.ts",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules dotenv -e .env.test jest -i --testPathPattern=tests/integration",
    "test:unit": "cross-env dotenv -e .env.test prisma migrate dev && NODE_OPTIONS=--experimental-vm-modules dotenv -e .env.test jest -i --coverage --testPathPattern=tests/unit",
    "prettier": "npx prettier --write --ignore-unknown ."
  },
